@model ERMS.ViewModels.Auth.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Auth.css" />
}

<div class="login-wrapper">
    <div class="login-card fade-in">

        <div class="login-brand">
            <h1>Forgot Password?</h1>
            <p>Enter your email and we'll send you a reset link</p>
        </div>

        <form asp-action="ForgotPassword" asp-controller="Auth" method="post" class="login-form">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="control-label">Email Address</label>
                <input asp-for="Email"
                       class="form-control"
                       type="email"
                       placeholder="your.email@company.com"
                       autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-submit">
                Send Reset Link
            </button>
        </form>

        <div class="forgot-back-link">
            <a asp-action="Login" asp-controller="Auth" class="forgot-link">
                &larr; Back to Login
            </a>
        </div>

    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
