@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Link Sent - ERMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .confirmation-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            padding: 40px;
            width: 100%;
            max-width: 500px;
            text-align: center;
        }
        .success-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 25px;
        }
        .success-icon i {
            font-size: 40px;
            color: white;
        }
        h2 {
            color: #333;
            font-weight: 600;
            margin-bottom: 20px;
        }
        .info-box {
            background: #f8f9fa;
            border-left: 4px solid #667eea;
            padding: 15px;
            margin: 25px 0;
            text-align: left;
        }
        .info-box i {
            color: #667eea;
            margin-right: 10px;
        }
        .btn-login {
            padding: 12px 40px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            font-weight: 500;
        }
        .btn-login:hover {
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
        }
    </style>
</head>
<body>
    <div class="confirmation-container">
        <div class="success-icon">
            <i class="fas fa-envelope-open-text"></i>
        </div>
        
        <h2>Check Your Email</h2>
        <p class="text-muted">@TempData["SuccessMessage"]</p>
        
        <div class="info-box">
            <p><i class="fas fa-info-circle"></i><strong>What to do next:</strong></p>
            <ul style="margin-bottom: 0;">
                <li>Check your email inbox (and spam folder)</li>
                <li>Click the reset link in the email</li>
                <li>The link will expire in 1 hour</li>
                <li>If you don't receive the email, try again or contact support</li>
            </ul>
        </div>
        
        <a asp-action="Login" asp-controller="Auth" class="btn btn-primary btn-login">
            <i class="fas fa-sign-in-alt me-2"></i>Back to Login
        </a>
        
        <div class="mt-4">
            <p class="text-muted small">Didn't receive the email?</p>
            <a asp-action="ForgotPassword" asp-controller="Auth" class="text-decoration-none">
                <i class="fas fa-redo me-1"></i>Try Again
            </a>
        </div>
    </div>
</body>
</html>
