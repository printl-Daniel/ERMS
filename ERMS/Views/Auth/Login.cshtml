@model ERMS.ViewModels.Auth.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Auth.css" />
}

<div class="login-wrapper">
    <div class="login-card">
        <div class="login-brand">
            <h1>Welcome Back</h1>
            <p>Sign in to continue to ERMS</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-modern alert-dismissible fade in" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-modern alert-dismissible fade in" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                @TempData["ErrorMessage"]
            </div>
        }

        <form asp-action="Login" asp-controller="Auth" method="post" class="login-form">
            @Html.AntiForgeryToken()
            
            <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-modern" role="alert"></div>

            <div class="form-group">
                <label asp-for="Username" class="control-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" autocomplete="username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" autocomplete="current-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-footer">
                <div class="remember-me">
                    <input asp-for="RememberMe" type="checkbox" id="rememberMe" />
                    <label for="rememberMe">Remember me</label>
                </div>
                <a asp-action="ForgotPassword" asp-controller="Auth" class="forgot-link">Forgot Password?</a>
            </div>

            <button type="submit" class="btn btn-submit">Sign In</button>
        </form>
    </div>
</div>
