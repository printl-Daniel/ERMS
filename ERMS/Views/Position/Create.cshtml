@model ERMS.ViewModels.Position.CreatePositionViewModel
@{
    ViewData["Title"] = "Create Position";
}

<link rel="stylesheet" href="~/css/Department-Position.css" />

<div class="pp-wrap pp-wrap-sm">

    <div class="pp-header">
        <div>
            <p class="pp-eyebrow">Positions</p>
            <h1 class="pp-title">New Position</h1>
        </div>
    </div>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="pp-card">
            <div class="pp-card-head">
                <span class="pp-card-label">
                    <span class="pp-card-icon"><span class="glyphicon glyphicon-briefcase"></span></span>
                    Position Details
                </span>
            </div>
            <div class="pp-card-body">

                <div asp-validation-summary="ModelOnly" class="pp-alert danger" style="display:@(ViewData.ModelState.IsValid ? "none" : "flex")">
                    <span class="pp-alert-icon glyphicon glyphicon-exclamation-sign"></span>
                    <div class="pp-alert-content"></div>
                </div>

                <div class="pp-field">
                    <label class="pp-label" asp-for="Title">Position Title</label>
                    <input asp-for="Title" class="pp-input" placeholder="e.g. Senior Developer" />
                    <span asp-validation-for="Title" class="pp-field-error"></span>
                </div>

                <div class="pp-field">
                    <label class="pp-label" asp-for="Description">Description</label>
                    <textarea asp-for="Description" class="pp-textarea" placeholder="Briefly describe the responsibilities of this position…"></textarea>
                    <span asp-validation-for="Description" class="pp-field-error"></span>
                </div>

                <div class="pp-field">
                    <label class="pp-label" asp-for="BaseSalary">Base Salary</label>
                    <div class="pp-input-group">
                        <span class="pp-input-prefix">₱</span>
                        <input asp-for="BaseSalary" class="pp-input" type="number" step="0.01" min="0" placeholder="0.00" />
                    </div>
                    <span asp-validation-for="BaseSalary" class="pp-field-error"></span>
                </div>

            </div>
        </div>

        <div class="pp-actions">
            <a asp-action="Index" class="btn btn-default btn-lg">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            <div class="pp-actions-right">
                <button type="submit" class="btn btn-primary btn-lg">
                    <span class="glyphicon glyphicon-floppy-disk"></span> Create Position
                </button>
            </div>
        </div>

    </form>
</div>

