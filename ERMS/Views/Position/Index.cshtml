@model IEnumerable<ERMS.ViewModels.Position.PositionListViewModel>
@{
    ViewData["Title"] = "Positions";
}

<link rel="stylesheet" href="~/css/Department-Position.css" />

<div class="pp-wrap">

    <!-- Header -->
    <div class="pp-header">
        <div>
            <p class="pp-eyebrow">Administration</p>
            <h1 class="pp-title">Positions</h1>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <span class="glyphicon glyphicon-plus" style="font-size:12px;"></span>
            New Position
        </a>
    </div>

    <!-- Toast alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="pp-alert success">
            <span class="pp-alert-icon glyphicon glyphicon-ok"></span>
            <div class="pp-alert-content">@TempData["Success"]</div>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="pp-alert danger">
            <span class="pp-alert-icon glyphicon glyphicon-exclamation-sign"></span>
            <div class="pp-alert-content">@TempData["Error"]</div>
        </div>
    }

    <!-- Table card -->
    <div class="pp-card">
        <div class="pp-card-head">
            <span class="pp-card-label">
                <span class="pp-card-icon"><span class="glyphicon glyphicon-briefcase"></span></span>
                All Positions
            </span>
            <span class="pp-chip pp-chip-accent">
                @Model.Count() position@(Model.Count() == 1 ? "" : "s")
            </span>
        </div>

        @if (Model.Any())
        {
            <div class="pp-table-wrap">
                <table class="pp-table">
                    <thead>
                        <tr>
                            <th>Position</th>
                            <th>Base Salary</th>
                            <th>Employees</th>
                            <th class="right">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="pp-table-title">@item.Title</div>
                                    @if (!string.IsNullOrWhiteSpace(item.Description))
                                    {
                                        <div class="pp-table-sub">@item.Description</div>
                                    }
                                </td>
                                <td>
                                    <span class="pp-table-salary">@item.BaseSalary.ToString("C")</span>
                                </td>
                                <td>
                                    @if (item.EmployeeCount > 0)
                                    {
                                        <span class="pp-chip pp-chip-accent">@item.EmployeeCount</span>
                                    }
                                    else
                                    {
                                        <span class="pp-chip pp-chip-muted">0</span>
                                    }
                                </td>
                                <td class="right">
                                    <div style="display:inline-flex; gap:6px;">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <span class="glyphicon glyphicon-eye-open"></span>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                            <span class="glyphicon glyphicon-pencil"></span>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                            <span class="glyphicon glyphicon-trash"></span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="pp-empty">
                <div class="pp-empty-icon">
                    <span class="glyphicon glyphicon-briefcase"></span>
                </div>
                <div class="pp-empty-title">No positions yet</div>
                <div class="pp-empty-sub">Create your first position to start assigning employees.</div>
                <a asp-action="Create" class="btn btn-primary" style="margin-top:8px;">
                    <span class="glyphicon glyphicon-plus" style="font-size:12px;"></span>
                    New Position
                </a>
            </div>
        }
    </div>

</div>
