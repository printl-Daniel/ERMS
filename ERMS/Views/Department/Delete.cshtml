@model ERMS.ViewModels.Department.DeleteDepartmentViewModel
@{
    ViewData["Title"] = "Delete Department";
}

<link rel="stylesheet" href="~/css/Department-Position.css" />

<div class="pp-wrap pp-wrap-sm">

    <div class="pp-header">
        <div>
            <p class="pp-eyebrow">Departments</p>
            <h1 class="pp-title">Delete Department</h1>
        </div>
    </div>

    <!-- Danger banner -->
    <div class="pp-danger-banner">
        <div class="pp-danger-icon">
            <span class="glyphicon glyphicon-trash"></span>
        </div>
        <div>
            <div class="pp-danger-title">This action is permanent</div>
            <div class="pp-danger-text">
                Deleting <strong>@Model.Name</strong> will permanently remove it from the system.
                This cannot be undone.
            </div>
        </div>
    </div>

    <!-- Department summary card -->
    <div class="pp-card">
        <div class="pp-card-head">
            <span class="pp-card-label">
                <span class="pp-card-icon" style="background:rgba(239,68,68,.1); color:#ef4444;">
                    <span class="glyphicon glyphicon-th-large"></span>
                </span>
                @Model.Name
            </span>
        </div>

        <div class="pp-info-grid">
            <div class="pp-info-cell full">
                <div class="pp-info-key">Department Name</div>
                <div class="pp-info-val">@Model.Name</div>
            </div>
            <div class="pp-info-cell full">
                <div class="pp-info-key">Description</div>
                <div class="pp-info-val">
                    @if (!string.IsNullOrWhiteSpace(Model.Description))
                    {
                        @Model.Description
                    }
                    else
                    {
                        <span style="color:var(--text-muted); font-style:italic;">No description provided.</span>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Confirm form -->
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="pp-actions">
            <a asp-action="Index" class="btn btn-default btn-lg">
                <span class="glyphicon glyphicon-arrow-left"></span> Cancel
            </a>
            <div class="pp-actions-right">
                <button type="submit" class="btn-pp-delete">
                    <span class="glyphicon glyphicon-trash"></span>
                    Yes, Delete Department
                </button>
            </div>
        </div>
    </form>

</div>
