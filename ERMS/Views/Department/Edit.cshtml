@model ERMS.ViewModels.Department.EditDepartmentViewModel
@{
    ViewData["Title"] = "Edit Department";
}

<link rel="stylesheet" href="~/css/Department-Position.css" />

<div class="pp-wrap pp-wrap-sm">

    <div class="pp-header">
        <div>
            <p class="pp-eyebrow">Departments</p>
            <h1 class="pp-title">Edit Department</h1>
        </div>
    </div>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="pp-card">
            <div class="pp-card-head">
                <span class="pp-card-label">
                    <span class="pp-card-icon"><span class="glyphicon glyphicon-pencil"></span></span>
                    Edit Details
                </span>
            </div>
            <div class="pp-card-body">

                <div asp-validation-summary="ModelOnly" class="pp-alert danger"
                     style="display:@(ViewData.ModelState.IsValid ? "none" : "flex")">
                    <span class="pp-alert-icon glyphicon glyphicon-exclamation-sign"></span>
                    <div class="pp-alert-content"></div>
                </div>

                <div class="pp-field">
                    <label class="pp-label" asp-for="Name">Department Name</label>
                    <input asp-for="Name" class="pp-input" />
                    <span asp-validation-for="Name" class="pp-field-error"></span>
                </div>

                <div class="pp-field">
                    <label class="pp-label" asp-for="Description">Description</label>
                    <textarea asp-for="Description" class="pp-textarea"></textarea>
                    <span asp-validation-for="Description" class="pp-field-error"></span>
                </div>

            </div>
        </div>

        <div class="pp-actions">
            <a asp-action="Index" class="btn btn-default btn-lg">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            <div class="pp-actions-right">
                <button type="submit" class="btn btn-primary btn-lg">
                    <span class="glyphicon glyphicon-floppy-disk"></span> Save Changes
                </button>
            </div>
        </div>

    </form>
</div>
