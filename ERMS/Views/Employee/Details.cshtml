@model ERMS.ViewModels.Employee.EmployeeDetailsViewModel
@{
    ViewBag.Title = "Employee Details";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <span class="glyphicon glyphicon-user"></span> Employee Details
                </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4><strong>@Model.FullName</strong></h4>
                        <p class="text-muted">@Model.Position</p>
                        
                        @if (Model.Status == "Active")
                        {
                            <span class="label label-success">@Model.Status</span>
                        }
                        else
                        {
                            <span class="label label-danger">@Model.Status</span>
                        }
                        <span class="label label-info">@Model.Role</span>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Edit", "Employee", new { id = Model.Id })" class="btn btn-warning">
                            <span class="glyphicon glyphicon-edit"></span> Edit
                        </a>
                        <a href="@Url.Action("Index", "Employee")" class="btn btn-default">
                            <span class="glyphicon glyphicon-arrow-left"></span> Back to List
                        </a>
                    </div>
                </div>

                <hr />

                <div class="row">
                    <div class="col-md-6">
                        <h4>Personal Information</h4>
                        <dl class="dl-horizontal">
                            <dt>Full Name:</dt>
                            <dd>@Model.FullName</dd>

                            <dt>Email:</dt>
                            <dd>
                                <a href="mailto:@Model.Email">@Model.Email</a>
                            </dd>

                            <dt>Phone:</dt>
                            <dd>@(Model.PhoneNumber ?? "N/A")</dd>

                            <dt>Username:</dt>
                            <dd>@Model.Username</dd>
                        </dl>
                    </div>

                    <div class="col-md-6">
                        <h4>Employment Information</h4>
                        <dl class="dl-horizontal">
                            <dt>Department:</dt>
                            <dd>@Model.Department</dd>

                            <dt>Position:</dt>
                            <dd>@Model.Position</dd>

                            <dt>Manager:</dt>
                            <dd>@(Model.Manager ?? "N/A")</dd>

                            <dt>Hire Date:</dt>
                            <dd>@Model.HireDate.ToString("MMMM dd, yyyy")</dd>

                            <dt>User Role:</dt>
                            <dd><span class="label label-info">@Model.Role</span></dd>
                        </dl>
                    </div>
                </div>

                @if (Model.Subordinates != null && Model.Subordinates.Any())
                {
                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            <h4>
                                <span class="glyphicon glyphicon-list"></span> Direct Reports
                                <span class="badge">@Model.Subordinates.Count</span>
                            </h4>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Position</th>
                                            <th>Email</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var subordinate in Model.Subordinates)
                                        {
                                            <tr>
                                                <td>@subordinate.FullName</td>
                                                <td>@subordinate.Position</td>
                                                <td>
                                                    <a href="mailto:@subordinate.Email">@subordinate.Email</a>
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("Details", "Employee", new { id = subordinate.Id })" 
                                                       class="btn btn-sm btn-info">
                                                        <span class="glyphicon glyphicon-eye-open"></span> View
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
