@model IEnumerable<ERMS.ViewModels.Employee.EmployeeListViewModel>
@{
    ViewBag.Title = "Employees";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <span class="glyphicon glyphicon-users"></span> Employee Management
                </h3>
            </div>
            <div class="panel-body">
                <div class="row" style="margin-bottom: 15px;">
                    <div class="col-md-6">
                        <a href="@Url.Action("Create", "Employee")" class="btn btn-success">
                            <span class="glyphicon glyphicon-plus"></span> Add New Employee
                        </a>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group">
                            <input type="text" id="searchInput" class="form-control" placeholder="Search employees...">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>
                            </span>
                        </div>
                    </div>
                </div>

                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="employeeTable">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Department</th>
                                    <th>Position</th>
                                    <th>Manager</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                    <th>Hire Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in Model)
                                {
                                    <tr>
                                        <td>@employee.FullName</td>
                                        <td>@employee.Email</td>
                                        <td>@employee.PhoneNumber</td>
                                        <td>@employee.Department</td>
                                        <td>@employee.Position</td>
                                        <td>@(employee.Manager ?? "N/A")</td>
                                        <td><span class="label label-info">@employee.Role</span></td>
                                        <td>
                                            @if (employee.Status == "Active")
                                            {
                                                <span class="label label-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="label label-danger">@employee.Status</span>
                                            }
                                        </td>
                                        <td>@employee.HireDate.ToString("MM/dd/yyyy")</td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="@Url.Action("Details", "Employee", new { id = employee.Id })" 
                                                   class="btn btn-info" title="View Details">
                                                    <span class="glyphicon glyphicon-eye-open"></span>
                                                </a>
                                                <a href="@Url.Action("Edit", "Employee", new { id = employee.Id })" 
                                                   class="btn btn-warning" title="Edit">
                                                    <span class="glyphicon glyphicon-edit"></span>
                                                </a>
                                                <a href="@Url.Action("Delete", "Employee", new { id = employee.Id })" 
                                                   class="btn btn-danger" title="Delete"
                                                   onclick="return confirm('Are you sure you want to delete this employee?');">
                                                    <span class="glyphicon glyphicon-trash"></span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <span class="glyphicon glyphicon-info-sign"></span>
                        No employees found. <a href="@Url.Action("Create", "Employee")">Add your first employee</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            // Search functionality
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#employeeTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}
