@model IEnumerable<ERMS.ViewModels.Employee.EmployeeListViewModel>
@{
    ViewBag.Title = "Employees";
    var total = Model?.Count() ?? 0;
    var active = Model?.Count(e => e.Status == "Active") ?? 0;
    var onLeave = Model?.Count(e => e.Status == "OnLeave") ?? 0;
    var suspended = Model?.Count(e => e.Status == "Suspended") ?? 0;
    var terminated = Model?.Count(e => e.Status == "Terminated") ?? 0;
    var inactive = total - active;
    var depts = Model?.Select(e => e.Department).Distinct().Count() ?? 0;

    string[] avatarColors = {
        "#0181b0","#10b981","#f59e0b","#ef4444",
        "#8b5cf6","#06b6d4","#ec4899","#6366f1"
    };
    int idx = 0;
}

@section styles {
    <link rel="stylesheet" href="~/css/Employee.css" />
}

<div class="emp-page">
    <div class="emp-page-header">
        <div>
            <p class="emp-eyebrow">Human Resources</p>
            <h1 class="emp-title">Employee Management</h1>
            <p class="emp-sub">Manage your workforce across all departments.</p>
        </div>
        <a href="@Url.Action("Create", "Employee")" class="emp-btn emp-btn-primary">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"
                 stroke-linecap="round" stroke-linejoin="round">
                <line x1="12" y1="5" x2="12" y2="19" />
                <line x1="5" y1="12" x2="19" y2="12" />
            </svg>
            Add Employee
        </a>
    </div>

    <!-- ── Stats ── -->
    <div class="emp-stats">
        <div class="emp-stat-card">
            <div class="emp-stat-icon emp-icon-blue">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                     stroke-linecap="round" stroke-linejoin="round">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                    <circle cx="9" cy="7" r="4" />
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                    <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                </svg>
            </div>
            <div>
                <div class="emp-stat-label">Total Employees</div>
                <div class="emp-stat-value">@total</div>
            </div>
        </div>
        <div class="emp-stat-card">
            <div class="emp-stat-icon emp-icon-green">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                     stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                    <polyline points="22 4 12 14.01 9 11.01" />
                </svg>
            </div>
            <div>
                <div class="emp-stat-label">Active</div>
                <div class="emp-stat-value">@active</div>
                <div class="emp-stat-delta">
                    @(total > 0 ? $"{(active * 100 / total)}% of total" : "—")
                </div>
            </div>
        </div>
        <div class="emp-stat-card">
            <div class="emp-stat-icon emp-icon-red">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                     stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10" />
                    <line x1="15" y1="9" x2="9" y2="15" />
                    <line x1="9" y1="9" x2="15" y2="15" />
                </svg>
            </div>
            <div>
                <div class="emp-stat-label">Inactive</div>
                <div class="emp-stat-value">@inactive</div>
            </div>
        </div>
        <div class="emp-stat-card">
            <div class="emp-stat-icon emp-icon-amber">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                     stroke-linecap="round" stroke-linejoin="round">
                    <rect x="2" y="7" width="20" height="14" rx="2" ry="2" />
                    <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16" />
                </svg>
            </div>
            <div>
                <div class="emp-stat-label">Departments</div>
                <div class="emp-stat-value">@depts</div>
            </div>
        </div>
    </div>

    <div class="emp-card">
        <div class="emp-card-header">
            <span class="emp-card-title">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                     stroke-linecap="round" stroke-linejoin="round">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                    <circle cx="9" cy="7" r="4" />
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                    <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                </svg>
                All Employees
            </span>

            <!-- ── Controls ── -->
            <div class="emp-card-controls">
                <div class="emp-search-wrap">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                         stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="11" cy="11" r="8" />
                        <line x1="21" y1="21" x2="16.65" y2="16.65" />
                    </svg>
                    <input type="text" id="empSearchInput" class="emp-search-input"
                           placeholder="Search employees…" />
                </div>

                <select id="empDeptFilter" class="emp-sort-select">
                    <option value="">All Departments</option>
                    @foreach (var dept in Model.Select(e => e.Department).Where(d => d != null).Distinct().OrderBy(d => d))
                    {
                        <option value="@dept.ToLower()">@dept</option>
                    }
                </select>

                <select id="empPositionFilter" class="emp-sort-select">
                    <option value="">All Positions</option>
                    @foreach (var pos in Model.Select(e => e.Position).Where(p => p != null).Distinct().OrderBy(p => p))
                    {
                        <option value="@pos.ToLower()">@pos</option>
                    }
                </select>

                <select id="empManagerFilter" class="emp-sort-select">
                    <option value="">All Managers</option>
                    @foreach (var mgr in Model.Select(e => e.Manager).Where(m => !string.IsNullOrEmpty(m)).Distinct().OrderBy(m => m))
                    {
                        <option value="@mgr.ToLower()">@mgr</option>
                    }
                </select>

                <select id="empRoleFilter" class="emp-sort-select">
                    <option value="">All Roles</option>
                    @foreach (var role in Model.Select(e => e.Role).Where(r => r != null).Distinct().OrderBy(r => r))
                    {
                        <option value="@role.ToLower()">@role</option>
                    }
                </select>

                <select id="empYearFilter" class="emp-sort-select">
                    <option value="">All Years</option>
                    @foreach (var year in Model.Select(e => e.HireDate.Year).Distinct().OrderByDescending(y => y))
                    {
                        <option value="@year">@year</option>
                    }
                </select>
                <button type="button" id="empResetFilters" class="emp-btn emp-btn-outline">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                         stroke-linecap="round" stroke-linejoin="round">
                        <path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8" />
                        <path d="M3 3v5h5" />
                    </svg>
                    Reset
                </button>
            </div>
        </div>

        <!-- ── Status Pills ── -->
        <div class="emp-filter-pills">
            <button class="emp-pill active" data-filter="all">
                All <span class="emp-pill-count">@total</span>
            </button>
            <button class="emp-pill" data-filter="Active">
                Active <span class="emp-pill-count">@active</span>
            </button>
            <button class="emp-pill" data-filter="OnLeave">
                On Leave <span class="emp-pill-count">@onLeave</span>
            </button>
            <button class="emp-pill" data-filter="Suspended">
                Suspended <span class="emp-pill-count">@suspended</span>
            </button>
            <button class="emp-pill" data-filter="Terminated">
                Terminated <span class="emp-pill-count">@terminated</span>
            </button>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="emp-table-wrap">
                <table id="empTable">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th class="hide-mobile">Phone</th>
                            <th>Department</th>
                            <th class="hide-mobile">Position</th>
                            <th class="hide-mobile">Manager</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th class="hide-mobile">Hire Date</th>
                            <th class="th-actions">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                            var color = avatarColors[idx % avatarColors.Length];
                            var initials = (employee.FullName?.Length > 0
                            ? string.Concat(employee.FullName.Split(' ')
                            .Where(w => w.Length > 0)
                            .Take(2)
                            .Select(w => w[0].ToString().ToUpper()))
                            : "?");
                            idx++;

                            <tr data-status="@employee.Status"
                                data-name="@employee.FullName?.ToLower()"
                                data-department="@employee.Department?.ToLower()"
                                data-position="@employee.Position?.ToLower()"
                                data-manager="@employee.Manager?.ToLower()"
                                data-role="@employee.Role?.ToLower()"
                                data-date="@employee.HireDate.ToString("yyyy-MM-dd")"
                                data-year="@employee.HireDate.Year"
                                data-search="@((employee.FullName + employee.Email + employee.Department + employee.Position + employee.Role + employee.Status).ToLower())">

                                <td>
                                    <div class="emp-cell">
                                        @if (!string.IsNullOrEmpty(employee.ProfilePicturePath))
                                        {
                                            <div class="emp-avatar emp-avatar-img">
                                                <img src="@employee.ProfilePicturePath" alt="@employee.FullName" />
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="emp-avatar" style="background: @color">
                                                @initials
                                            </div>
                                        }
                                        <div>
                                            <div class="emp-name">@employee.FullName</div>
                                            <div class="emp-email">@employee.Email</div>
                                        </div>
                                    </div>
                                </td>

                                <td class="emp-col-mono hide-mobile">@employee.PhoneNumber</td>
                                <td class="emp-col-dept">@employee.Department</td>
                                <td class="emp-col-secondary hide-mobile">@employee.Position</td>
                                <td class="emp-col-secondary hide-mobile">@(employee.Manager ?? "—")</td>

                                <td>
                                    <span class="emp-role-badge">@employee.Role</span>
                                </td>

                                <td>
                                    @switch (employee.Status)
                                    {
                                        case "Active":
                                            <span class="emp-badge emp-badge-active">
                                                <span class="emp-badge-dot"></span>Active
                                            </span>
                                            break;
                                        case "OnLeave":
                                            <span class="emp-badge emp-badge-onleave">
                                                <span class="emp-badge-dot"></span>On Leave
                                            </span>
                                            break;
                                        case "Suspended":
                                            <span class="emp-badge emp-badge-suspended">
                                                <span class="emp-badge-dot"></span>Suspended
                                            </span>
                                            break;
                                        case "Terminated":
                                            <span class="emp-badge emp-badge-terminated">
                                                <span class="emp-badge-dot"></span>Terminated
                                            </span>
                                            break;
                                        default:
                                            <span class="emp-badge emp-badge-inactive">
                                                <span class="emp-badge-dot"></span>@employee.Status
                                            </span>
                                            break;
                                    }
                                </td>

                                <td class="emp-col-mono hide-mobile">
                                    @employee.HireDate.ToString("MM/dd/yyyy")
                                </td>

                                <td>
                                    <div class="emp-actions">
                                        <a href="@Url.Action("Details", "Employee", new { id = employee.Id })"
                                           class="emp-act-btn emp-act-view" title="View details">
                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                                 stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
                                                <circle cx="12" cy="12" r="3" />
                                            </svg>
                                        </a>
                                        <a href="@Url.Action("Edit", "Employee", new { id = employee.Id })"
                                           class="emp-act-btn emp-act-edit" title="Edit">
                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                                 stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
                                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" />
                                            </svg>
                                        </a>
                                        <a href="@Url.Action("Delete", "Employee", new { id = employee.Id })"
                                           class="emp-act-btn emp-act-del" title="Delete">
                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                                 stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <polyline points="3 6 5 6 21 6" />
                                                <path d="M19 6l-1 14a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2L5 6" />
                                                <path d="M10 11v6" />
                                                <path d="M14 11v6" />
                                                <path d="M9 6V4a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1v2" />
                                            </svg>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="emp-table-footer">
                <span class="emp-count" id="empCount">
                    Showing <strong>@total</strong> employees
                </span>
            </div>
        }
        else
        {
            <div class="emp-empty">
                <div class="emp-empty-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"
                         stroke-linecap="round" stroke-linejoin="round">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                        <circle cx="9" cy="7" r="4" />
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                        <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                    </svg>
                </div>
                <div class="emp-empty-title">No employees yet</div>
                <p class="emp-empty-sub">
                    Get started by adding your first employee to the system.
                </p>
                <a href="@Url.Action("Create", "Employee")" class="emp-btn emp-btn-primary">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"
                         stroke-linecap="round" stroke-linejoin="round">
                        <line x1="12" y1="5" x2="12" y2="19" />
                        <line x1="5" y1="12" x2="19" y2="12" />
                    </svg>
                    Add First Employee
                </a>
            </div>
        }
    </div>
</div>

@section scripts {
    <script src="~/js/Employee.js"></script>
}