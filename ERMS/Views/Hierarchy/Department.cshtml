@* Views/Hierarchy/Department.cshtml *@
@model ERMS.ViewModels.Hierarchy.DepartmentHierarchyViewModel

@{
    ViewData["Title"] = $"{Model.DepartmentName} â€” Hierarchy";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Hierarchy.css" />
}

<div class="hierarchy-page">

    <ol class="hr-breadcrumb">
        <li><a asp-action="Index">Hierarchy</a></li>
        <li class="active">@Model.DepartmentName</li>
    </ol>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible" role="alert">
            <i class="fas fa-exclamation-circle"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                <i class="fas fa-times"></i>
            </button>
        </div>
    }

    <div class="hr-dept-header">
        <i class="fas fa-building"></i>
        <div>
            <h2>@Model.DepartmentName Department</h2>
            <p>Department Organizational Structure</p>
        </div>
    </div>

    @if (Model.Statistics != null)
    {
        <div class="dept-stats">
            <div class="stat-card stat-primary">
                <div class="stat-icon"><i class="fas fa-users"></i></div>
                <div class="stat-content">
                    <div class="stat-value">@Model.Statistics.TotalEmployees</div>
                    <div class="stat-label">Total Employees</div>
                </div>
            </div>
            <div class="stat-card stat-success">
                <div class="stat-icon"><i class="fas fa-user-tie"></i></div>
                <div class="stat-content">
                    <div class="stat-value">@Model.Statistics.ManagersCount</div>
                    <div class="stat-label">Managers</div>
                </div>
            </div>
            <div class="stat-card stat-info">
                <div class="stat-icon"><i class="fas fa-crown"></i></div>
                <div class="stat-content">
                    <div class="stat-value">@Model.Statistics.TopLevelCount</div>
                    <div class="stat-label">Top Level</div>
                </div>
            </div>
            <div class="stat-card stat-warning">
                <div class="stat-icon"><i class="fas fa-project-diagram"></i></div>
                <div class="stat-content">
                    <div class="stat-value">@Model.Statistics.AverageSpanOfControl</div>
                    <div class="stat-label">Avg Span</div>
                </div>
            </div>
        </div>
    }

    <div class="hr-section-card">
        <div class="hr-section-header">
            <i class="fas fa-sitemap"></i>
            Department Structure
        </div>
        <div class="hr-section-body">
            @if (Model.Hierarchy != null && Model.Hierarchy.Any())
            {
                <div class="hierarchy-tree">
                    @foreach (var employee in Model.Hierarchy)
                    {
                        @await Html.PartialAsync("_HierarchyNode", employee)
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i>
                    No employees found in this department.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
<script>
document.addEventListener('DOMContentLoaded', function () {
    document.body.classList.add('hr-ready');

    if (typeof bootstrap !== 'undefined') {
        document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(function (el) {
            new bootstrap.Tooltip(el);
        });
    }

    document.querySelectorAll('.expand-btn').forEach(function (btn) {
        btn.addEventListener('click', function (e) {
            e.stopPropagation();
            var grid = document.getElementById(this.dataset.target);
            if (!grid) return;
            var isOpen = grid.classList.toggle('hr-expanded');
            this.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
        });
    });
});
</script>
}
