@* Views/Hierarchy/Employee.cshtml *@
@model ERMS.ViewModels.Hierarchy.EmployeeHierarchyViewModel

@{
    ViewData["Title"] = $"{Model.Employee.FullName} - Hierarchy";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Hierarchy</a></li>
                    <li class="breadcrumb-item active">@Model.Employee.FullName</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Employee Info Card -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2 text-center">
                            <img src="@Model.Employee.DisplayProfilePicture"
                                 alt="@Model.Employee.FullName"
                                 class="img-fluid rounded-circle"
                                 style="max-width: 150px;"
                                 onerror="this.src='/images/default-avatar.png'">
                        </div>
                        <div class="col-md-10">
                            <h3>@Model.Employee.FullName</h3>
                            <p class="lead">@Model.Employee.PositionTitle - @Model.Employee.DepartmentName</p>

                            @if (Model.Info.IsTopLevel)
                            {
                                <span class="badge bg-primary">Top Level Manager</span>
                            }

                            <hr>
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong><i class="fas fa-envelope"></i> Email:</strong> @Model.Employee.Email</p>
                                    @if (Model.Employee.HasPhoneNumber)
                                    {
                                        <p><strong><i class="fas fa-phone"></i> Phone:</strong> @Model.Employee.PhoneNumber</p>
                                    }
                                </div>
                                <div class="col-md-6">
                                    <p><strong><i class="fas fa-users"></i> Direct Reports:</strong> @Model.Info.DirectReports</p>
                                    <p><strong><i class="fas fa-sitemap"></i> Total Subordinates:</strong> @Model.Info.TotalSubordinates</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Manager Chain -->
    @if (Model.ManagerChain != null && Model.ManagerChain.Any() && Model.ManagerChain.Count > 1)
    {
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-users-cog"></i> Reporting Chain</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center overflow-auto">
                            @for (int i = 0; i < Model.ManagerChain.Count; i++)
                            {
                                var person = Model.ManagerChain[i];
                                <div class="text-center mx-3">
                                    <a asp-action="Employee" asp-route-id="@person.Id" class="text-decoration-none">
                                        <img src="@person.DisplayProfilePicture"
                                             alt="@person.FullName"
                                             class="rounded-circle mb-2"
                                             style="width: 60px; height: 60px;"
                                             onerror="this.src='/images/default-avatar.png'">
                                        <p class="mb-0 small"><strong>@person.FullName</strong></p>
                                        <p class="mb-0 small text-muted">@person.PositionTitle</p>
                                    </a>
                                </div>
                                @if (i < Model.ManagerChain.Count - 1)
                                {
                                    <i class="fas fa-arrow-right fa-2x text-muted mx-2"></i>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Subordinates -->
    @if (Model.Info.HasSubordinates && Model.DirectReports != null && Model.DirectReports.Any())
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-user-friends"></i> Direct Reports (@Model.Info.DirectReports)</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var subordinate in Model.DirectReports)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center">
                                                <img src="@subordinate.DisplayProfilePicture"
                                                     alt="@subordinate.FullName"
                                                     class="rounded-circle me-3"
                                                     style="width: 50px; height: 50px;"
                                                     onerror="this.src='/images/default-avatar.png'">
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1">
                                                        <a asp-action="Employee" asp-route-id="@subordinate.Id" class="text-decoration-none">
                                                            @subordinate.FullName
                                                        </a>
                                                    </h6>
                                                    <p class="mb-0 small text-muted">
                                                        @subordinate.PositionTitle - @subordinate.DepartmentName
                                                    </p>
                                                    @if (subordinate.HasSubordinates)
                                                    {
                                                        <span class="badge bg-info mt-1">
                                                            @subordinate.SubordinateCount subordinates
                                                        </span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> This employee has no direct reports.
        </div>
    }
</div>