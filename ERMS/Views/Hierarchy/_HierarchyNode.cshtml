@* Views/Hierarchy/_HierarchyNode.cshtml *@
@model ERMS.ViewModels.Hierarchy.HierarchyNodeViewModel

<div class="hierarchy-node level-@Model.Level">
    <div class="card employee-card mb-2">
        <div class="card-body p-3">
            <div class="d-flex align-items-center">
                <img src="@Model.DisplayProfilePicture"
                     alt="@Model.FullName"
                     class="employee-avatar me-3"
                     onerror="this.src='/images/default-avatar.png'">
				<div class="flex-grow-1">
                        <a asp-controller="Hierarchy"
                           asp-action="Employee"
                           asp-route-id="@Model.Id"
                           class="text-decoration-none">
                            @Model.FullName
                        </a>
                        @if (Model.HasSubordinates)
                        {
                            <span class="subordinate-badge ms-2">
                                <i class="fas fa-users"></i> @Model.SubordinateCount
                            </span>
                        }
                    </h6>
                    <p class="mb-0 text-muted small">
                        <i class="fas fa-briefcase"></i> @Model.PositionTitle
                        <span class="mx-2">|</span>
                        <i class="fas fa-building"></i> @Model.DepartmentName
                    </p>
                </div>
                <div class="text-end">
                    <small class="text-muted d-block">
                        <i class="fas fa-envelope"></i> @Model.Email
                    </small>
                    @if (Model.HasPhoneNumber)
                    {
                        <small class="text-muted d-block">
                            <i class="fas fa-phone"></i> @Model.PhoneNumber
                        </small>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (Model.HasSubordinates && Model.Subordinates != null && Model.Subordinates.Any())
    {
        <div class="subordinates">
            @foreach (var subordinate in Model.Subordinates)
            {
                @await Html.PartialAsync("_HierarchyNode", subordinate)
            }
        </div>
    }
</div>