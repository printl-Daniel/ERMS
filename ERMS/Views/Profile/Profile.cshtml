@model ERMS.ViewModels.Profile.ProfileViewModel
@{
    ViewBag.Title = "My Profile";
}


section styles {
<link rel="stylesheet" href="~/css/Profile.css" />
}
<div class="profile-wrap">

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="profile-alert success">
            <span class="glyphicon glyphicon-ok"></span>
            @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="profile-alert error">
            <span class="glyphicon glyphicon-exclamation-sign"></span>
            @TempData["Error"]
        </div>
    }

    <!-- Page title -->
    <div class="profile-header">
        <div>
            <p class="profile-header-title">Account</p>
            <h1 class="profile-header-name">@Model.FullName</h1>
        </div>
    </div>

    <div class="profile-grid">

        <!-- ── LEFT COLUMN ── -->
        <div style="display:flex; flex-direction:column; gap:20px;">

            <!-- Avatar card -->
            <div class="pcard">
                <div class="avatar-card">
                    <div class="avatar-ring">
                        <img src="@Model.ProfilePicturePath" alt="Profile Picture">
                        <button class="avatar-change-btn" data-toggle="modal" data-target="#updatePictureModal" title="Change photo">
                            <span class="glyphicon glyphicon-camera"></span>
                        </button>
                    </div>
                    <div class="avatar-name">@Model.FullName</div>
                    <div class="avatar-position">@Model.Position</div>
                    <div class="dept-chip">
                        <span class="glyphicon glyphicon-briefcase" style="font-size:10px;"></span>
                        @Model.Department
                    </div>
                </div>
            </div>

            <!-- Employment info card -->
            <div class="pcard">
                <div class="emp-card">
                    <div class="emp-card-label">Employment</div>

                    <div class="emp-row">
                        <span class="emp-key">Employee #</span>
                        <span class="emp-val">@Model.EmployeeNumber</span>
                    </div>
                    <div class="emp-row">
                        <span class="emp-key">Hire Date</span>
                        <span class="emp-val">@Model.HireDate.ToString("MMM d, yyyy")</span>
                    </div>
                    <div class="emp-row">
                        <span class="emp-key">Position</span>
                        <span class="emp-val">@Model.Position</span>
                    </div>
                    <div class="emp-row">
                        <span class="emp-key">Department</span>
                        <span class="emp-val">@Model.Department</span>
                    </div>

                    <p class="emp-note">
                        <span class="glyphicon glyphicon-lock" style="font-size:10px;"></span>
                        Position &amp; Department are read-only
                    </p>
                </div>
            </div>

        </div>

        <!-- ── RIGHT COLUMN ── -->
        <div class="right-col">

            <!-- Personal info card -->
            <div class="pcard">
                <div class="section-head">
                    <span class="section-label">Personal Information</span>
                    <button class="edit-btn" data-toggle="modal" data-target="#updateInfoModal">
                        <span class="glyphicon glyphicon-pencil" style="font-size:11px;"></span>
                        Edit
                    </button>
                </div>

                <div class="info-grid">
                    <div class="info-field">
                        <div class="info-field-key">Email</div>
                        <div class="info-field-val">
                            <a href="mailto:@Model.Email">@Model.Email</a>
                        </div>
                    </div>
                    <div class="info-field">
                        <div class="info-field-key">Phone</div>
                        <div class="info-field-val">@Model.PhoneNumber</div>
                    </div>
                    <div class="info-field">
                        <div class="info-field-key">Date of Birth</div>
                        <div class="info-field-val">@Model.DateOfBirth.ToString("MMMM d, yyyy")</div>
                    </div>
                    <div class="info-field">
                        <div class="info-field-key">Address</div>
                        <div class="info-field-val">@Model.Address</div>
                    </div>
                </div>
            </div>

            <!-- Security card -->
            <div class="pcard">
                <div class="security-card">
                    <div class="security-left">
                        <div class="security-icon">
                            <span class="glyphicon glyphicon-lock"></span>
                        </div>
                        <div>
                            <div class="security-title">Password</div>
                            <div class="security-sub">Keep your account secure with a strong password</div>
                        </div>
                    </div>
                    <button class="change-pw-btn" data-toggle="modal" data-target="#updatePasswordModal">
                        <span class="glyphicon glyphicon-refresh" style="font-size:12px;"></span>
                        Change Password
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>


<!-- ── MODAL: Update Personal Info ── -->
<div class="modal fade" id="updateInfoModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <form asp-action="UpdatePersonalInfo" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h4 class="modal-title">Edit Personal Info</h4>
                    <button type="button" class="modal-close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="EmployeeId" value="@Model.EmployeeId" />

                    <div class="mfield">
                        <label for="Email">Email Address</label>
                        <input type="email" id="Email" name="Email" value="@Model.Email" required>
                    </div>
                    <div class="mfield">
                        <label for="PhoneNumber">Phone Number</label>
                        <input type="tel" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" required>
                    </div>
                    <div class="mfield">
                        <label for="DateOfBirth">Date of Birth</label>
                        <input type="date" id="DateOfBirth" name="DateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" required>
                    </div>
                    <div class="mfield">
                        <label for="Address">Address</label>
                        <textarea id="Address" name="Address" required>@Model.Address</textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-floppy-disk" style="font-size:13px;"></span>
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- ── MODAL: Change Password ── -->
<div class="modal fade" id="updatePasswordModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <form asp-action="UpdatePassword" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h4 class="modal-title">Change Password</h4>
                    <button type="button" class="modal-close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="mfield">
                        <label for="CurrentPassword">Current Password</label>
                        <input type="password" id="CurrentPassword" name="CurrentPassword" required placeholder="••••••••">
                    </div>
                    <div class="mfield">
                        <label for="NewPassword">New Password</label>
                        <input type="password" id="NewPassword" name="NewPassword" required minlength="6" placeholder="Min. 6 characters">
                        <p class="mfield-hint">Use a mix of letters, numbers, and symbols</p>
                    </div>
                    <div class="mfield">
                        <label for="ConfirmPassword">Confirm New Password</label>
                        <input type="password" id="ConfirmPassword" name="ConfirmPassword" required placeholder="Re-enter new password">
                        <div id="passwordMatch" class="pw-strength"></div>
                    </div>
                    <div class="security-tip">
                        <span class="glyphicon glyphicon-info-sign" style="margin-top:1px; flex-shrink:0;"></span>
                        A strong password has at least 8 characters and includes uppercase, lowercase, numbers, and symbols.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">
                        <span class="glyphicon glyphicon-lock" style="font-size:13px;"></span>
                        Update Password
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- ── MODAL: Update Profile Picture ── -->
<div class="modal fade" id="updatePictureModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <form asp-action="UpdateProfilePicture" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h4 class="modal-title">Change Profile Photo</h4>
                    <button type="button" class="modal-close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="EmployeeId" value="@Model.EmployeeId" />

                    <div class="mfield">
                        <label for="ProfilePicture">Select Image</label>
                        <input type="file" id="ProfilePicture" name="ProfilePicture"
                               accept="image/jpeg,image/png,image/gif,image/jpg" required>
                        <p class="mfield-hint">JPG, PNG or GIF · Max 5 MB</p>
                    </div>

                    <div id="imagePreview" style="display:none;">
                        <img id="preview" src="#" alt="Preview">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-upload" style="font-size:13px;"></span>
                        Upload Photo
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


@section scripts {
    <script>
        $(document).ready(function () {

            // Image preview
            $('#ProfilePicture').on('change', function (e) {
                var file = e.target.files[0];
                if (file) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $('#preview').attr('src', e.target.result);
                        $('#imagePreview').show();
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Password match check
            $('#ConfirmPassword, #NewPassword').on('input', function () {
                var nw  = $('#NewPassword').val();
                var cfm = $('#ConfirmPassword').val();
                var $el = $('#passwordMatch');
                if (!cfm) { $el.text(''); return; }
                if (nw === cfm) {
                    $el.text('✓ Passwords match').removeClass('no-match').addClass('match');
                } else {
                    $el.text('✗ Passwords do not match').removeClass('match').addClass('no-match');
                }
            });

            $('#NewPassword').on('input', function () {
                $('#ConfirmPassword').val('');
                $('#passwordMatch').text('');
            });
        });
    </script>
}
