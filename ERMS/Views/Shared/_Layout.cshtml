<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ERMS</title>

    <!-- Bootstrap 3 CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <!-- Custom Modern CSS -->
    <link href="~/css/site.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Ultra Modern Navigation Bar -->
    <nav class="navbar navbar-inverse navbar-fixed-top modern-navbar">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ERMS", "Index", "Hierarchy", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="collapse navbar-collapse" id="navbar-collapse">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    var fullName = User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value;
                    var role = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;

                    <ul class="nav navbar-nav navbar-left">
                        @if (role == "Admin")
                        {
                            <li>@Html.ActionLink("Hierarchy", "Index", "Hierarchy")</li>
                            <li>@Html.ActionLink("Employees", "Index", "Employee")</li>
                            <li>@Html.ActionLink("Department", "Index", "Department")</li>
                            <li>@Html.ActionLink("Position", "Index", "Position")</li>
                            <li>@Html.ActionLink("Profile", "Profile", "Profile")</li>
                        }
                        else if (role == "Manager")
                        {
                            <li>@Html.ActionLink("Hierarchy", "Index", "Hierarchy")</li>
                            <li>@Html.ActionLink("Employees", "Index", "Employee")</li>
                            <li>@Html.ActionLink("Department", "Index", "Department")</li>
                            <li>@Html.ActionLink("Position", "Index", "Position")</li>
                            <li>@Html.ActionLink("Profile", "Profile", "Profile")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Hierarchy", "Index", "Hierarchy")</li>
                            <li>@Html.ActionLink("Profile", "Profile", "Profile")</li>
                        }
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        <li class="user-info-pill">
                            @{
                                var profilePic = User.FindFirst("ProfilePicture")?.Value;
                                var initials = string.IsNullOrEmpty(fullName) ? "?" :
                                string.Join("", fullName.Split(' ')
                                .Where(w => w.Length > 0)
                                .Take(2)
                                .Select(w => w[0].ToString().ToUpper()));
                            }
                            <span class="user-avatar">
                                @if (!string.IsNullOrEmpty(profilePic))
                                {
                                    <img src="@profilePic" alt="@fullName" />
                                }
                                else
                                {
                                    @initials
                                }
                            </span>
                            <span class="user-details">
                                <span class="user-name">@fullName</span>
                                <span class="user-role">@role</span>
                            </span>
                        </li>

                        <!-- Theme Toggle -->
                        <li>
                            <a href="#" id="themeToggle" class="icon-btn" title="Toggle theme" aria-label="Toggle theme">
                                <span class="glyphicon glyphicon-adjust"></span>
                            </a>
                        </li>

                        <!-- Logout -->
                        <li>
                            <form method="post" asp-controller="Auth" asp-action="Logout" class="navbar-form-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="icon-btn logout-btn" title="Logout" aria-label="Logout">
                                    <span class="glyphicon glyphicon-log-out"></span>
                                </button>
                            </form>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <!-- Theme Toggle -->
                        <li>
                            <a href="#" id="themeToggle" class="icon-btn" title="Toggle theme" aria-label="Toggle theme">
                                <span class="glyphicon glyphicon-adjust"></span>
                            </a>
                        </li>

                        <!-- Login -->
                        <li>
                            <a asp-controller="Auth" asp-action="Login" class="login-link">
                                <span class="glyphicon glyphicon-log-in"></span> Login
                            </a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="modern-footer">
        <div class="container-fluid">
            <p>Â© @DateTime.Now.Year ERMS. All rights reserved.</p>
        </div>
    </footer>

    <!-- Toast Container -->
    <div id="toast-container"></div>

      <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="~/js/site.js"></script>
    @if (TempData["Success"] != null)
    {
        <script>showToast('success', '@Html.Raw(TempData["Success"].ToString().Replace("'", "\\'"))');</script>
    }
    @if (TempData["Error"] != null)
    {
        <script>showToast('error', '@Html.Raw(TempData["Error"].ToString().Replace("'", "\\'"))');</script>
    }
    @if (TempData["Warning"] != null)
    {
        <script>showToast('warning', '@Html.Raw(TempData["Warning"].ToString().Replace("'", "\\'"))');</script>
    }
    @if (TempData["Info"] != null)
    {
        <script>showToast('info', '@Html.Raw(TempData["Info"].ToString().Replace("'", "\\'"))');</script>
    }

    @RenderSection("scripts", required: false)
</body>
</html>